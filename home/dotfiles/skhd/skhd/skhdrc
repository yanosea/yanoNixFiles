# open terminal
cmd - t : open -n -a "wezterm"
# focus window
alt - h : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --focus west
alt - j : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --focus south
alt - k : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --focus north
alt - l : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --focus east
# move window
shift + alt - h : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --warp west
shift + alt - j : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --warp south
shift + alt - k : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --warp north
shift + alt - l : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --warp east
# increase window size
shift + alt - left : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --resize left:-20:0
shift + alt - down : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --resize bottom:0:20
shift + alt - up : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --resize top:0:-20
shift + alt - right : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --resize right:20:0
# toggle window fullscreen zoom
alt - x : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --toggle zoom-fullscreen
# toggle window native fullscreen
shift + alt - x : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --toggle native-fullscreen
# minimize window
alt - m : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --minimize
# toggle window split type
alt - v : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --toggle split
# float / unfloat window and restore position
alt + shift - space : eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --toggle float && eval $(/opt/homebrew/bin/brew shellenv) && yabai -m window --grid 4:4:1:1:2:2
# blacklist
.blacklist [
 "Splashtop Personal"
]
